#include <stdio.h>
#include <locale.h>

void main () {
    setlocale (LC_ALL, "portuguese");

    float n1,n2;

    printf("informe o primeiro número a ser comparado: ");
    scanf("%f", &n1);
    printf("informe o segundo número a ser comparado: ");
    scanf("%f", &n2);

    if(n1>n2) {
            printf("%.2f é o maior número" ,n1);
    }else{
        printf("%.2f é o maior número" ,n2);
    }



}
