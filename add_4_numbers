#include <stdio.h>

// este programa serve para calcular s soma entre quatro numeros
void main () {
   int n1,n2,n3,n4;
   int soma;

   printf ("digite o primeiro numero:");
   scanf ("%d", &n1);
   printf ("digite o segundo numero:");
   scanf ("%d", &n2);
   printf ("digite o terceiro numero:");
   scanf ("%d", &n3);
   printf ("digite o quarto numero:");
   scanf ("%d", &n4);

   soma = n1 + n2 + n3+ n4;

   printf("A soma eh: %d", soma);


}
